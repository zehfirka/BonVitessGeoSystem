<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    tools:context=".aboutUs">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black800_base"
        android:fontFamily="@font/montserrat_extrabold"
        android:layout_marginLeft="24dp"
        android:textAllCaps="true"
        android:textSize="40dp"
        android:layout_marginTop="24dp"
        android:text="Розробники застосунку" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="120dp">

            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_below="@id/view4"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/architect"
                android:clickable="true"
                android:onClick="onSecondViewClick" />

            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/analytik"
                android:clickable="true"
                android:onClick="onFirstViewCLick" />

            <View
                android:id="@+id/view5"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_below="@id/view3"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/programmer"
                android:clickable="true"
                android:onClick="onThirdViewClick" />

            <View
                android:id="@+id/view6"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_below="@id/view5"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/documentator"
                android:clickable="true"
                android:onClick="onFourthViewClick" />

            <View
                android:id="@+id/view7"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_below="@id/view6"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/tester"
                android:clickable="true"
                android:onClick="onFifthViewClick" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>