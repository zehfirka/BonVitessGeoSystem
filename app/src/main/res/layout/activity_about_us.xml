<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    tools:context=".aboutUsActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black800_base"
        android:fontFamily="@font/montserrat_extrabold"
        android:layout_marginStart="24dp"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:layout_marginTop="24dp"
        android:text="@string/developers_aboutUs_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="120dp">

            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_below="@id/view4"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/infocard_2"
                android:clickable="true"
                android:onClick="onSecondViewClick"
                android:focusable="true" />

            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/infocard_1"
                android:clickable="true"
                android:onClick="onFirstViewCLick"
                android:focusable="true" />

            <View
                android:id="@+id/view5"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_below="@id/view3"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/infocard_3"
                android:clickable="true"
                android:onClick="onThirdViewClick"
                android:focusable="true" />

            <View
                android:id="@+id/view6"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_below="@id/view5"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/infocard_4"
                android:clickable="true"
                android:onClick="onFourthViewClick"
                android:focusable="true" />

            <View
                android:id="@+id/view7"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_below="@id/view6"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/infocard_5"
                android:clickable="true"
                android:onClick="onFifthViewClick"
                android:focusable="true" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>