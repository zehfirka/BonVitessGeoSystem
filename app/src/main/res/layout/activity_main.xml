<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_base"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/contrast"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:drawableEndCompat="@drawable/city_variant_outline" />

    <Button
        android:id="@+id/button"
        style="@style/Button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:onClick="OnSettingsButtonClick" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/contrast_base"
        android:id="@+id/cardView"
        android:layout_above="@id/adView"
        android:layout_height="260dp"
        app:cardCornerRadius="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/helloText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_alternates"
                android:text="Куди їдемо?"
                android:textColor="@color/basic"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextStart"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:autofillHints=""
                android:drawableStart="@drawable/map_marker_right_outline"
                android:ems="10"
                android:enabled="true"
                android:fontFamily="@font/montserrat_thin"
                android:hint="@string/stopA"
                android:inputType="textPersonName"
                android:shadowColor="@color/second"
                android:textColor="@color/second"
                android:textColorHighlight="@color/second"
                android:textColorHint="@color/second"
                android:textColorLink="@color/second"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextFinish"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_below="@id/editTextStart"
                android:layout_marginTop="15sp"
                android:autofillHints=""
                android:drawableStart="@drawable/map_marker_right_outline"
                android:ems="10"
                android:enabled="true"
                android:fontFamily="@font/montserrat_thin"
                android:hint="@string/stopB"
                android:inputType="textPersonName"
                android:shadowColor="@color/second"
                android:textColor="@color/second"
                android:textColorHighlight="@color/second"
                android:textColorHint="@color/second"
                android:textColorLink="@color/second" />

            <Button
                android:id="@+id/button3"
                style="@style/search_Button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="mOnButtonClick"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editTextFinish"
                android:layout_marginTop="30dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        android:layout_height="wrap_content"/>

</RelativeLayout>